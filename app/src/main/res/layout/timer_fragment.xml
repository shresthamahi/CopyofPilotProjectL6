<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDecrease"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:src="@android:drawable/arrow_down_float"
        app:backgroundTint="@color/forestGreen"
        app:layout_constraintStart_toEndOf="@+id/tvtimer"
        app:layout_constraintTop_toBottomOf="@+id/btnIncrease" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="171dp"
        android:layout_height="69dp"
        android:layout_marginTop="4dp"
        android:text="Set Timer"
        android:textColor="@color/purple_200"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="204dp"
        android:layout_height="18dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:max="4"
        android:progress="1"
        android:progressTint="@color/hunterGreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:tickMarkTint="@color/crayolaGreen" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="232dp"
        android:text="Minutes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvtimer"
        android:layout_width="82dp"
        android:layout_height="62dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="116dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnIncrease"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:src="@android:drawable/arrow_up_float"
        app:backgroundTint="@color/forestGreen"
        app:borderWidth="0dp"
        app:layout_constraintStart_toEndOf="@+id/tvtimer"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnStartTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="28dp"
        android:text="Start Timer"
        app:icon="@color/crayolaGreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDecrease" />

</androidx.constraintlayout.widget.ConstraintLayout>